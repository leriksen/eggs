!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    -# Set the viewport width to device width for mobile
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }

    %title Eggs-cellent

    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .container
      %nav.navbar.navbar-default
        .navbar-header
          %button.navbar-toggle.collapsed{data:{toggle: "collapse", target: "#bs-example-navbar-collapse-1"}}
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{href: "/"}
            = image_tag(image_path('4eggs.png'), alt: "Eggs-cellent")
            Eggs-cellent

        .collapse.navbar-collapse{id: "bs-example-navbar-collapse-1"}
          -if current_user
            %ul.nav.navbar-nav
              %li.dropdown
                %a.dropdown-toggle{href: "#", data: {toggle: "dropdown"}}
                  Record <span class='caret'></span>
                %ul.dropdown-menu
                  %li
                    %a{href: "/pages/record_shed"} Shed
                  %li
                    %a{href: "/pages/record_tray"} Tray
              %li.dropdown
                %a.dropdown-toggle{href: "#", data: {toggle: "dropdown"}}
                  Reports <span class='caret'></span>
                %ul.dropdown-menu
                  %li
                    %a{href: "/pages/report_shed"} Shed
                  %li
                    %a{href: "/pages/report_tray"} Tray

          %ul.nav.navbar-form.navbar-right{role: 'access'}
            .form-group
              - if current_user?
                = link_to logout_path, method: :delete do
                  %button.btn.btn-primary.navbar-btn.access-button{type: "button"}= "Log Out #{current_user}"
              - else
                %a{href: "#{login_path}"}
                  %button.btn.btn-primary.navbar-btn.access-button{type: "button"} Log in
                %a{href: "#{signup_path}"}
                  %button.btn.btn-default.navbar-btn.access-button{type: "button"} Sign up
      .flash
        = flash_messages

      = yield

    = javascript_include_tag 'application', 'data-turbolinks-track' => true
