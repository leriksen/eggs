.page-header
  = link_to users_path, class: 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Back
  = link_to edit_user_path(@user), class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    Edit
  %h1= "#{@user}"

%dl.dl-horizontal
  %dt First Name:
  %dd= @user.first_name

%dl.dl-horizontal
  %dt Last Name:
  %dd= @user.last_name

%dl.dl-horizontal
  %dt Email:
  %dd= @user.email

%dl.dl-horizontal
  %dt Actice ?
  %dd= @user.active
