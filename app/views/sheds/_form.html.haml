= form_for @shed do |f|
  - if @shed.errors.any?
    #error_explanation
      %h2= "#{pluralize(@shed.errors.count, "error")} prohibited this shed from being saved:"
      %ul
        - @shed.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
